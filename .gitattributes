# Completely ignore client_app from language detection
client_app/* linguist-detectable=false

# Also ignore common JS/CSS files
*.js linguist-detectable=false
*.css linguist-detectable=false
*.html linguist-detectable=false
*.json linguist-detectable=false

# Force C++ detection
arduino_code/* linguist-language=C++
*.ino linguist-language=C++
*.cpp linguist-language=C++
*.h linguist-language=C++
*.hpp linguist-language=C++
*.c linguist-language=C

# Mark documentation files
README.md linguist-documentation=true
*.md linguist-documentation=true