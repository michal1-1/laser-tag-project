dist/** linguist-vendored=true
build/** linguist-vendored=true

# ✅ שמירת חשיפה של קבצים בודדים מהווב – כדי שיופיעו באחוזים קטנים בגרף
*.js linguist-vendored=false
*.ts linguist-vendored=false
*.tsx linguist-vendored=false
*.css linguist-vendored=false
